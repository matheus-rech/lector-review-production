{
  "name": "lector-review",
  "private": true,
  "version": "1.0.0",
  "description": "Professional PDF review application with search, highlighting, and form filling capabilities",
  "author": "Matheus Rech",
  "homepage": "https://github.com/matheus-rech/lector-review-production",
  "repository": {
    "type": "git",
    "url": "https://github.com/matheus-rech/lector-review-production.git"
  },
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\"",
    "cursor:setup": "echo 'âœ… Cursor setup complete! Open .cursorrules to see AI instructions.'",
    "clean": "rm -rf node_modules dist .turbo release"
  },
  "dependencies": {
    "@anaralabs/lector": "3.7.2",
    "pdfjs-dist": "^4.6.82",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^4.0.7",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "playwright": "^1.56.1",
    "postcss": "^8.4.47",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.7",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.lector.review",
    "productName": "Lector Review",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": [{"target": "nsis", "arch": ["x64"]}],
      "icon": "build/icon.png"
    },
    "mac": {
      "target": [{"target": "dmg", "arch": ["x64", "arm64"]}],
      "icon": "build/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [{"target": "AppImage", "arch": ["x64"]}],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
